# --- Required Configuration ---

# Authentication for the Daemo Agent Client
# This API key allows your agent to communicate with the Daemo platform.
DAEMO_AGENT_API_KEY=your_daemo_agent_api_key_here

# --- AI Model Configuration ---

# Choose your LLM Provider: 'gemini' (default), 'anthropic', or 'openai'
LLM_PROVIDER=gemini

# Provider-Specific API Keys (Set the one matching your LLM_PROVIDER)
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# (Optional) Override the specific model name
# LLM_MODEL=gemini-1.5-flash

# --- Application Configuration ---

# The port where this Express server will listen
PORT=5000

# The URL of the Daemo Gateway/Engine
# Default is https://engine.daemo.ai:50052
DAEMO_GATEWAY_URL=https://engine.daemo.ai:50052

# --- SF 311 Service Configuration ---

# (Highly Recommended) SF Data App Token
# While the engine works without it, you will hit rate limits quickly.
# Get one here: https://dev.socrata.com/docs/app-tokens.html
SF_311_APP_TOKEN=your_socrata_app_token_here

